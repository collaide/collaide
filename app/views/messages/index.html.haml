-#LAYOUT DES MESSAGES
=render(:layout => 'layout_messages') do
  .row
    .small-12.columns
      %h1= t('messages.index.h1_title')
  .row
    .small-12.columns
      -if @conversations.empty?
        %p= t'messages.index.no_message'
      -else
        %hr
        =render partial: 'conversation', collection: @conversations