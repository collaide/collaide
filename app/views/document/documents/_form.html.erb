<%= simple_form_for(@document) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :title %>
    <%= f.input :description %>
    <%= f.input :author %>
    <%= f.input :number_of_pages %>
    <%= f.input :realized_at %>
    <%= f.input :language %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
