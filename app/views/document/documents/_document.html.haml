.panel.index-data
  .row
    .large-3.columns.small-12
      .row
        .small-4.large-12.columns
          %a{href: document_document_path(document)}
            =image_tag show_icon(document), width: 100, height: 100
          %p= rating_for document, 'note', star: 5
        .large-12.small-8.columns
          %p
            =raw("<important class='label secondary'>#{t('documents.index.hits')}</important>")
            =document.hits
          =like_button(document_document_url(document), 'button_count')
      #star
    .small-12.columns.large-9
      %h3= link_to document.title, document
      %h6.doc-subtitle= doc_sub_title document
      %p= document.description.truncate(100, separator: ' ', omission: ' ...')
      =link_to t('documents.index.download'), document_document_download_path(document_document_id: document), class: 'button' if can? :download, Document::Document
      =show_link document, t('documents.index.show')