-if document_counter%2==0
  <div class="row columns" id="document-container">
.index-document
  .columns.large-6
    .row
      .columns.small-12.show-for-small
        %h1= link_to document.title, document
        .hide-for-small
          =l(document.created_at, format: :short)
        %h6.doc-subtitle= doc_sub_title document
      .large-4.columns.small-12
        .row
          .small-4.large-12.columns
            %a{href: document_document_path(document), class: 'th'}
              =image_tag show_icon(document), width: 100, height: 100
            %p= rating_for document, 'note', star: 5
          .large-12.small-8.columns
            %ul.no-bullet
              %li
                =raw("<important class='label secondary'>#{t('document.documents.index.hits')}</important>")
                =document.hits
              %li= document.show_extension
              %li= pluralize document.number_of_pages, t('document.dico.page')
              %li.show-for-small
                =t('document.documents.index.published_by')
                =link_to(document.user.name_to_show, document.user)
        #star
      .small-12.columns.large-8
        .hide-for-small
          %h1= link_to document.title, document
          %h6.doc-subtitle= doc_sub_title document
          .hide-for-small
            =t('document.documents.index.published_by')
            =link_to(document.user.name_to_show, document.user)
        %p= document.description.truncate(100, separator: ' ', omission: ' ...')
        .row
          .columns
            -#link_to t('document.documents.index.download'), document_document_download_path(document_document_id: document), class: 'button secondary expand'
            -#link_to t('document.documents.index.show'), document, class: 'button secondary expand'
    %hr.show-for-small
-if document_counter%2!=0 or document_counter == @document_documents.size
  </div>
  %hr.hide-for-small
