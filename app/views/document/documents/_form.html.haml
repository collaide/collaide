=simple_form_for(@document, html: {multipart: true, class: 'custom'}) do |f|
  =f.error_notification
  .form-inputs
    =f.input :title, label_html: tooltip(t('document.documents.forms.tooltips.title'))
    =f.input :description, input_html: {rows: 3}, label_html: tooltip(t('document.documents.forms.tooltips.description'))
    -if @document.files.empty? or @document.files.first.id.nil?
      -@document.files.build if @document.files.empty?
      =f.simple_fields_for :files do |file|
        =file.input :file, label_html: tooltip(t('document.documents.forms.tooltips.file'))
    .row
      =f.input :author, label_html: tooltip(t('document.documents.forms.tooltips.author')), wrapper_html: {class: 'columns large-5'}
      =f.input :number_of_pages, default: 1, label_html: tooltip(t('document.documents.forms.tooltips.number_of_pages')), wrapper_html: {class: 'columns large-2'}
      =f.input :realized_at, as: :string, input_html: {class: 'datepicker'}, required: true, label_html: tooltip(t('document.documents.forms.tooltips.realized_at')), wrapper_html: {class: 'columns large-5'}
    .row
      =f.input :language, collection: languages_list, prompt: t("document.documents.form.choose_language"), label_html: tooltip(t('document.documents.forms.tooltips.language')), wrapper_html: {class: 'columns large-4'}
      =f.association :study_level, prompt: t('document.documents.form.choose_study_level'), collection: Document::StudyLevel.includes(:translations), label_html: tooltip(t('document.documents.forms.tooltips.study_level')), wrapper_html: {class: 'columns large-4'}
      =f.association :document_type, prompt: t('document.documents.form.choose_document_type'), collection: Document::Type.includes(:translations), label_html: tooltip(t('document.documents.forms.tooltips.type')), wrapper_html: {class: 'columns large-4'}
    =f.association :domains, collection: Domain.select_tree, label_html: tooltip(t('document.documents.forms.tooltips.domains')), input_html: {class: ''}
    #tree-domains{:'data-url' => document_json_tree_path}
  .form-actions
    =f.button :submit, t('document.documents.form.submit')