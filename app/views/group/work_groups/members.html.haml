    =t'group.members.empty'
  -else
    %ul
      -@work_group.members.each do |m|
        %li
          -gm = m.group_members.where(group: @work_group).take
          =link_to m.to_s, m
          ="occupe le r√¥le de #{gm.role.text} et a rejoint le groupe #{gm.joined_method.text}"
