=render(layout: 'group/layouts/layout') do
  %h1= t('group.topics.index.h1_title')
  %blockquote= t('group.topics.index.description')

  .row
    .columns.small-12
      .panel
        %h4.subheader= t('group.topics.index.begin_discussions')
        =render 'topics/form', submit_text: t('group.topics.index.new_discussion'), object: @group
  .row
    .columns.small-12
      %h4.subheader= t('group.topics.index.last_discussions')
      =render partial: 'topics/topic', collection: @topics, as: 'topic', locals: {limit: 5} || "<p>#{t('group.topics.index.empty')}</p>"


