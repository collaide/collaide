=simple_form_for @invitation, url: group_work_group_invitations_path do |f|
  =f.input :sender, as: :hidden
  =f.input :group, as: :hidden
  =search_field_tag 'invitation[users]'
  =hidden_field_tag :no_members, 'invitation[no-members]'
  =f.input :message
  =f.button :submit, t('group.invitations.create.submit')