=form_tag(new_repository_manager_repo_folder_path, :method => :post) do
  =text_field_tag(:repo_folder_name, nil, placeholder: t('repository_manager.models.repo_folder.name'))
  =hidden_field_tag("object[class]", object.class.base_class.to_s)
  =hidden_field_tag("object[id]", object.id)
  -if repo_item
    =hidden_field_tag("repo_item[id]", repo_item.id)
  =submit_tag(t('repository_manager.form.new.repo_folder.submit'), class: "button")