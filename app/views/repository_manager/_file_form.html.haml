-unless @repo_file
  -@repo_file = RepoItem::RepoFile.new
=simple_form_for(@repo_file, :url => new_repository_manager_repo_file_path, :method => :post) do |f|
  =f.error_notification
  =f.input :file, label: t('repository_manager.form.new.repo_file')
  =f.input :file_cache, as: :hidden
  =hidden_field_tag(:object_class, object.class.base_class.to_s)
  -#=hidden_field_tag(:object_table, object.class.table_name)

  =hidden_field_tag(:object_id, object.id)
  =f.button :submit