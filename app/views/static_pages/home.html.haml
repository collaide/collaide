#home
  -if current_user.nil?
    .signup-panel
      .row
        .columns.small-12
          %h1.text-center= t('static_pages.home.title.h1', app_name: t('app_name_long'))
      .row
        .columns.large-9
          %h3.subheader.center-to-form= t('static_pages.home.title.h3')
        .columns.large-3
          = render 'devise/form/sign_up'
  -else
    .connected-panel
      .row
        .columns.small-1
          .user
            =link_to(image_tag(current_user.avatar.url(:medium)), current_user, class: 'th')
        .columns.small-11.small-centered
          %h2.text-center= t('.connected_panel.title')
          -if current_user.notifications.empty?
            %h4.text-center= t('.connected_panel.no_notifications')
          -else
            %ul.text-left
              -current_user.notifications.each do |a_notif|
                %li= a_notif.print_message
  .row
    .columns.large-4
      %h4.last-title#doc
        =link_to t('.last_doc.h4'), document_documents_path
      .last-panel
        %ul
          -@documents.each do |a_doc|
            %li
              %h5.subheader= link_to "#{a_doc.title}, #{a_doc.description}".truncate(40, separator: '', omission: '... '), document_document_path(a_doc)
        %p.text-right
          = link_to t('.last_doc.all'), document_documents_path
        =link_to t('.last_doc.button'), new_document_document_path, class: 'button secondary'
    .columns.large-4
      %h4.last-title#ads
        =link_to t('.last_ads.h4'), advertisement_advertisements_path
      .last-panel
        %ul
          -@ads.each do |an_ads|
            %li
              %h5.subheader= link_to "#{an_ads.book.title}, #{an_ads.book.description}".truncate(40, separator: '', omission: '... '), advertisement_sale_book_path(an_ads)
        %p.text-right
          = link_to t('.last_ads.all'), advertisement_advertisements_path
        =link_to t('.last_ads.button'), new_advertisement_advertisement_path, class: 'button secondary'
    .columns.large-4
      %h4.last-title#news
        =link_to t('.last_news.h4'), blog_path
      .last-panel
        %ul
          -@site_news.get_recent_posts(count: 5).get(:posts).each do |a_new|
            %li
              %h5.subheader= link_to "#{l a_new.date.to_date, format: :short} : #{a_new.title}".truncate(40, separator: '', omission: '... '), a_new.url
        %p.text-right
          -# TODO : change this !!!!
          = link_to t('.last_news.all'), blog_path
        =link_to t('.last_news.button'), '', class: 'button secondary'
