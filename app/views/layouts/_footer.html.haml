%footer
  .panel
    .row
      .columns.large-3
        %h6= link_to t('app_name'), eval("root_#{I18n.locale.to_s}_path")
        %ul
          %li= link_to t('footer.collaide.documents'), document_documents_path
          %li= link_to t('footer.collaide.books'), advertisement_advertisements_path
          %li= link_to t('footer.collaide.groups'), group_groups_path
          %li= link_to t('footer.collaide.news'), blog_path
          %li= link_to t('footer.collaide.rules'), rules_path
          %li= link_to t('footer.collaide.partners'), partners_path
          %li= link_to t('footer.collaide.guest_book'), guest_books_path
          %li= link_to t('footer.collaide.about'), about_path
          %li= link_to t('footer.collaide.contact'), contact_path
      .columns.large-3
        %h6= link_to t('footer.titles.documents'), document_documents_path
        %ul
          -Document::Document.footer.each do |a_doc|
            %li= link_to a_doc.title, a_doc
      .columns.large-3
        %h6= link_to t('footer.titles.advertisements'), advertisement_advertisements_path
        %ul
          -Advertisement::Advertisement.footer.each do |an_ad|
            %li= link_to an_ad.title, an_ad
      .columns.large-3
        %h6= t('footer.titles.follow_us')
        %ul.inline-list
          %li= link_to 'Facebook', 'http://www.facebook.com/infocollaide', class: 'webicon facebook large'
          %li= link_to 'Twitter', 'http://twitter.com/#!/collaide', class: 'webicon twitter large'

