%footer
  %hr
  %ul.inline-list
    %li= link_to t('footer.about'), about_path
    %li= link_to t('footer.help'), help_path
    %li= link_to t('footer.contact'), contact_path
    %li
      =t'header.lang'
      %br
      -I18n.available_locales.map do |l|
        -active = ''
        -if l.to_s == I18n.locale.to_s
          -active = 'active'
        =link_to t("translation.#{l}"),  url_for(:locale => l.to_s), class: active
        %br
%p= debug(params) if Rails.env.development?