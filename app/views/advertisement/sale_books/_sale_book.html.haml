.row
  .large-2.columns.small-12
    .row
      .small-12.columns
        %a{href: advertisement_sale_book_path(sale_book)}
          -if sale_book.book.image_link
            =image_tag sale_book.book.image_link, width: 100, height: 100
          -else
            =image_tag 'advertisements/book-icon.png', width: 100, height: 100


    .row
      .small-12.columns
        %p= rating_for sale_book.book, 'note', star: 5
    .row
      .small-12.columns
        %p
          =raw("<span>#{t('advertisements.index.hits')}</span>")
          =sale_book.hits
    #star
  .small-12.columns.large-10
    %h4= link_to sale_book.book.title, sale_book
    %h5.doc-subtitle= raw t('sale_books.index.subtitle',
    {price: sale_book.price,
    currency: sale_book.currency})
    -if sale_book.book.description
      %p= sale_book.book.description.truncate(100, separator: ' ', omission: ' ...')
    -else
      %p= t('sale_books.index.no_description')
    =show_link sale_book, t('sale_books.index.buy')
    =show_link sale_book, t('advertisements.index.show')
  %hr