-#content_for :title, t('users.show.meta_title', user: @user.name_to_show)
-content_for :title, t('users.advertisements.meta_title', user: @user.to_s)

=render(:layout => 'layout') do
  %h1= t'users.advertisements.title', user: @user.to_s
  -if @user.advertisements.empty?
    =t'users.advertisements.no-advertisement', user: @user.to_s
  -else
    .small-12.columns#advertisements
      %ul.large-block-grid-3
        -@parity=0
        =render @user.advertisements