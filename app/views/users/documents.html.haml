-#content_for :title, t('users.show.meta_title', user: @user.name_to_show)
-content_for :title, t('users.documents.title', user: @user.to_s)

=render(:layout => 'layout') do
  .right.hide-for-small=link_to t('document.documents.index.new_link'), new_document_document_path, class: 'button'
  %h1= t'users.documents.title', user: @user.to_s
  .show-for-small=link_to t('document.documents.index.new_link'), new_document_document_path, class: 'button expand'
  -if @user.documents.empty?
    =t'users.documents.no-document', user: @user.to_s
  -else
    .row.columns
      %ul.large-block-grid-2#documents
        -@parity=0
        =render @user.documents