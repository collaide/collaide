-#content_for :title, t('users.show.meta_title', user: @user.name_to_show)
-content_for :title, t('users.avatar.title', user: @user.to_s)

=render(:layout => 'layout') do
  %h1= t'users.avatar.title', user: @user.to_s
  -unless @user.avatar
    =t'users.avatar.no-avatar', user: @user.to_s
  -else
    .small-24.columns
      %p=image_tag @user.avatar